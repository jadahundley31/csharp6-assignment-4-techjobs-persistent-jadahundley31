@using TechJobs6Persistent.ViewModels
@model TechJobs6Persistent.ViewModels.AddJobViewModel

<h1>Add Job</h1>

<form asp-controller="Job" asp-action="Add" method="post">
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" name="Name" />
        <span></span>
    </div>

    <br />

    <div class="form-group">
        <label asp-for="EmployerId">Employer: </label>
        <select asp-for="EmployerId" asp-items="Model.listOfEmployers"></select>

        <a href="/Employer/Create">Add Employer</a>
    </div>
    <input type="submit" value="Add Job" />
</form>
